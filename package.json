{
  "name": "pilotage",
  "type": "module",
  "version": "0.0.2",
  "private": true,
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "description": "Help your software projects with SDD which you need",
  "author": "witsaint",
  "license": "MIT",
  "keywords": [
    "SDD",
    "SPEC DRIVEN DEVELOPMENT",
    "engineering",
    "development",
    "ai",
    "prd",
    "workflow"
  ],
  "scripts": {
    "build": "unbuild",
    "build-release": "unbuild",
    "dev": "pnpm -C packages/pilotage run dev",
    "stub": "pnpm -r run stub",
    "release": "bumpp -r",
    "lint": "eslint . --cache --cache-location .cache/eslint/main.eslintcache",
    "test": "run-s test-unit",
    "test-unit": "vitest run --passWithNoTests",
    "test-unit-watch": "vitest watch --ui",
    "test-coverage": "vitest run --coverage",
    "test-ui": "vitest --ui",
    "test-debug": "vitest --inspect-brk --no-coverage",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "lint-staged-files": "lint-staged --allow-empty",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@testing-library/jest-dom": "catalog:testing",
    "@testing-library/user-event": "catalog:testing",
    "@types/execa": "catalog:testing",
    "@types/mock-fs": "catalog:testing",
    "@types/node": "catalog:types",
    "@types/supertest": "catalog:testing",
    "@vitest/coverage-v8": "catalog:testing",
    "@vitest/ui": "catalog:testing",
    "bumpp": "catalog:cli",
    "cross-env": "catalog:testing",
    "dotenv": "catalog:utils",
    "eslint": "catalog:cli",
    "execa": "catalog:testing",
    "lint-staged": "catalog:cli",
    "mock-fs": "catalog:testing",
    "npm-run-all": "catalog:utils",
    "simple-git-hooks": "catalog:cli",
    "supertest": "catalog:testing",
    "tinyexec": "catalog:utils",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "unbuild": "catalog:cli",
    "vitest": "catalog:testing",
    "vitest-package-exports": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
